<Window x:Class="ElloNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElloNote"
        mc:Ignorable="d"
        Title="ElloNote" Height="450" Width="800" WindowStyle="None" WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">
    <Border CornerRadius="10"
            BorderThickness="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.543"/>
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Border.Background>
            <LinearGradientBrush>
                <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="0.543"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.RowSpan="3" Grid.Column="0" Orientation="Vertical" Background="{StaticResource panelColor}">
                <StackPanel Orientation="Horizontal"
                            Height="35"
                            Margin="15,25,0,40">
                    <TextBlock Text="AHX" Foreground="{StaticResource titleColor2}" FontSize="20" FontFamily="VDS"
                               FontWeight="Medium" VerticalAlignment="Center" Margin="50,0,0,0"/>

                </StackPanel>
                <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource color1}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Home"  Style="{StaticResource menuButtonIcon}"/>
                        <TextBlock Text="Dashboard" Style="{StaticResource menuButtonText}"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource color2}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="File"  Style="{StaticResource menuButtonIcon}"/>
                        <TextBlock Text="Insert" Style="{StaticResource menuButtonText}"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource color6}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Pencil"  Style="{StaticResource menuButtonIcon}"/>
                        <TextBlock Text="Drawing" Style="{StaticResource menuButtonText}"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource color9}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Eye"  Style="{StaticResource menuButtonIcon}"/>
                        <TextBlock Text="View" Style="{StaticResource menuButtonText}"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource color2}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Search"  Style="{StaticResource menuButtonIcon}"/>
                        <TextBlock Text="Search" Style="{StaticResource menuButtonText}"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource color3}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Clock"  Style="{StaticResource menuButtonIcon}"/>
                        <TextBlock Text="Recent" Style="{StaticResource menuButtonText}"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton Style="{StaticResource menuButton}" Tag="{StaticResource color7}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Tools"  Style="{StaticResource menuButtonIcon}"/>
                        <TextBlock Text="Settings" Style="{StaticResource menuButtonText}"/>
                    </StackPanel>
                </RadioButton>
            </StackPanel>
            <Border Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <StackPanel x:Name="pnlControlBar" Grid.Row="0" Orientation="Horizontal" FlowDirection="RightToLeft"
                        Background="Transparent" Margin="0,0,3,0" MouseLeftButtonDown="pnlControlBar_MouseLeftButtonDown"
                        MouseEnter="pnlControlBar_MouseEnter">

                        <Button Name="closeButton" Style="{StaticResource controlBarButton}" Tag="{StaticResource color4}" Click="closeButton_Click" Height="30" Width="40">
                            <fa:IconImage Icon="Close" Style="{StaticResource controlBarButtonIcon}"/>

                        </Button>

                    </StackPanel>
                </Grid>
            </Border>

        </Grid>

    </Border>
</Window>
